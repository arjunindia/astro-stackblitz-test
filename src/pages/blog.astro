---
  import BaseLayout from "../layouts/BaseLayout.astro"
  import BlogPost from "../components/BlogPost.astro"
  const allPosts = await Astro.glob('../pages/posts/*.md');
  const posts = allPosts.sort((a,b)=>{
    const date1 = new Date(a.frontmatter.pubDate);
    const date2 = new Date(b.frontmatter.pubDate);
    
    return date2 - date1;
  })
---

<BaseLayout pageTitle="Blog">
		  <h1>My Astro Learning Blog</h1>
  <p>This is where I will post about my journey learning Astro.</p>
    <ul>
     {allPosts.map((post) => <BlogPost title={post.frontmatter.title} url={post.url} img={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />)}
    </ul>
 </BaseLayout>